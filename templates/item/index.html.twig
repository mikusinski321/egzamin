{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.item_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.item_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

      <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'item.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.author'|trans, 'item.author') }}</th>
                <th scope="col">
                    {{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                <td>{{ item.title }}</td>
                <td>{{ item.author }}</td>
                    <td><a href={{url('item_show',{'id':item.id})}} title="{{'message.item_view'|trans}}">{{'message.item_view'|trans}}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock  %}